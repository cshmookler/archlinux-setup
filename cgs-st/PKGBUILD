pkgname="cgs-st"
pkgver="1.0.0"
pkgrel=1
pkgdesc="Patched simple terminal for X"
arch=("any")
depends=("xorg-server")
conflicts=("$pkgname")
source=("git+https://git.suckless.org/st")
md5sums=("SKIP")

prepare() {
    cp config.def.h.patch st
    cd st
    patch <config.def.h.patch
}

pkgver() {
    cd st
    git log -1 --date=format:"%Y%m%d" --format="%ad"
}

build() {
    cd st
    make
}

package() {
    cd st
    make DESTDIR="$pkgdir/" install
}
