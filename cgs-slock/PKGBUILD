pkgname="cgs-slock"
pkgver="1.0.0"
pkgrel=1
pkgdesc="Patched simple display locker for X"
arch=("any")
depends=("xorg")
conflicts=("$pkgname")
source=("git+https://git.suckless.org/slock")
md5sums=("SKIP")

prepare() {
    cp config.def.h.patch slock
    cd slock
    patch <config.def.h.patch
}

pkgver() {
    cd slock
    git log -1 --date=format:"%Y%m%d" --format="%ad"
}

build() {
    cd slock
    make DESTDIR="$pkgdir/"
}

check() {
    slock/slock -v
}

package() {
    cd slock
    make DESTDIR="$pkgdir/" install
}
