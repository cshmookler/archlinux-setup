pkgname="cgs-xorg-user-cfg"
pkgver="1.0.0"
pkgrel=1
pkgdesc="User configuration for Xorg"
arch=("any")
depends=("xorg" "xorg-init" "xss-lock" "physlock" "cgs-dwm" "cgs-slock" "cgs-status")
conflicts=("$pkgname")

package() {
    mkdir -p $pkgdir/home/$USER/
    cp .xinitrc $pkgdir/home/$USER/.xinitrc
}
